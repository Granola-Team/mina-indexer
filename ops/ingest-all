#! /bin/sh

set -eux

VER="$(git rev-parse --short HEAD)"

time \
  ./target/release/mina-indexer \
    server start \
      --block-startup-dir /mnt/mina-log-storage/mina_network_block_data \
      --database-dir /mnt/mina-log-storage/"$VER"-database \
      --log-level DEBUG \
      --log-level-file DEBUG \
      --log-dir /mnt/mina-log-storage/"$VER"-logs \
      --ledger-cadence 1000 \
      --prune-interval 4000
